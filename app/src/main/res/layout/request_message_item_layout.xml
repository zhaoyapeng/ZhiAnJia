<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/applyMessageBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ask_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp">

        <com.zhianjia.m.zhianjia.UI.widget.RoundImageView
            android:id="@+id/icon_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/icon_image_view"
            android:text="xxxx"
            android:textColor="@color/applyMessageTextColor"
            android:textSize="13sp" />

        <Button
            android:id="@+id/disagree_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/apply_message_item_disagree"
            android:elevation="0dp"
            android:shadowColor="@color/transparent"
            android:text="忽略"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/applyMessageButtonTextColor"
            android:textSize="12sp" />

        <Button
            android:id="@+id/agree_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/disagree_button"
            android:background="@drawable/apply_message_item_agree"
            android:text="同意"
            android:textColor="@color/applyMessageButtonTextColor"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="14dp">

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="xxxx"
            android:textColor="@color/applyMessageTextColor"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/close_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/register_close" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@color/dividerLineColor" />

</RelativeLayout>
